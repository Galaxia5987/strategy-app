<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:paddingTop="32dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/simulation_Board"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/simulation_board"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/main_page_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/main_page_background"
        android:layout_marginEnd="12dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

    <ImageView
        android:id="@+id/galaxia_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/galaxia_logo"
        android:layout_marginEnd="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startegy"
        android:textColor="@color/blue"
        android:textSize="150sp"
        android:textStyle="bold" />


</LinearLayout>
    <Button
    android:id="@+id/btn_open_drawing_board"
    android:layout_width="900dp"
        android:layout_height="70dp"
    android:background="@drawable/button_selector"
    android:text="סימולציית לוח משחק"
    android:textStyle="bold"
    android:layout_marginBottom="12dp"/>

<Button
    android:id="@+id/btn_open_notes_board"
    android:layout_width="900dp"
    android:layout_height="70dp"
    android:background="@drawable/button_selector"
    android:text="תכנון משחק עתידי"
    android:textStyle="bold"
    android:layout_marginBottom="12dp"/>

<Button
    android:id="@+id/btn_open_alliance_view"
    android:layout_width="900dp"
    android:layout_height="70dp"
    android:background="@drawable/button_selector"
    android:text="Alliance View"
    android:textStyle="bold"
    android:layout_marginBottom="12dp"/>

<Button
    android:id="@+id/btn_open_alliance_calculation"
    android:layout_width="900dp"
    android:layout_height="70dp"
    android:background="@drawable/button_selector"
    android:text="בחירת ברית"
    android:textStyle="bold"
    android:layout_marginBottom="12dp"/>



</LinearLayout>